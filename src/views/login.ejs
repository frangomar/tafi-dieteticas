<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    </head>
<body>

  <%- include('./partials/header') %>
  
  <main>
    <section class="form-login">

        
    <form  method="POST">

        <h4>Iniciar Sesión</h4>
        
        <div>
            <label for="email">mail</label>
            <input class="control " type="email" name="email" id="email" placeholder="ej:JuanPerez@mail.com">
            <% if (locals.errors && errors.email) { %>
                <div class = 'text-danger'>
                    <%= errors.email.msg %>
                </div>
            <% } %>
        </div>

        <div>
            <label for="re-password">contraseña</label>
            <input class="control " type="password" name="password" id="password">
            <% if (locals.errors && errors.password) { %>
                <div class = 'text-danger'>
                    <%= errors.password.msg %>
                </div>
            <% } %>
        </div>
            <label for = "recordame">Recordarme</label>
            <input type= "checkbox" name= "recordame"/>
            <button class="boton" type="submit">Login</button>
            <div class="errores">
                <ul> </ul>
            </div>
    </form>
</section>
</main>
    
<%- include('./partials/footer') %>
<script src="/js/front-login.js"> </script>
</body>
</html>
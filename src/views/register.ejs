<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/register.css">
</head>

<body>

    <%- include('./partials/header') %>

    <main>
        <section class="form-register">


            <form action="/users/create" method="POST" enctype="multipart/form-data">


                <h4>Formulario Registro</h4>
                <div>
                    <label for="firstName">Nombre de usuario</label>
                    <input class="control " type="text" name="firstName" id="firstName" placeholder="ej:HE-MAN83">
                    <% if (locals.errors && errors.firstName ) { %>
                    <div class='text-danger'>
                        <%= errors.name.msg %>
                    </div>
                    <% } %>
                </div>

                <div>
                    <label for="lastName">Apellido</label>
                    <input class="control " type="text" name="lastName" id="lastName" placeholder="ej:HE-MAN83">
                    <% if (locals.errors && errors.lastName) { %>
                    <div class='text-danger'>
                        <%= errors.lastName.msg %>
                    </div>
                    <% } %>

                </div>

                <div>
                    <label for="email">Mail</label>
                    <input class="control " type="email" name="email" id="email" placeholder="ej:JuanPerez@mail.com">
                    <% if (locals.errors && errors.email) { %>
                    <div class='text-danger'>
                        <%= errors.email.msg %>
                    </div>
                    <% } %>
                </div>

                <div>
                    <label for="gender">Genero</label>
                    <input class="control " type="text" name="gender" id="gender">
                    <% if (locals.errors && errors.email) { %>
                        <div class='text-danger'>
                            <%= errors.gender.msg %>
                        </div>
                        <% } %>
                </div>

                <div>
                    <label for="image">Imagen</label>
                    <input class="control " type="file" name="image" id="image">
                    <% if (locals.errors && errors.email) { %>
                        <div class='text-danger'>
                            <%= errors.image.msg %>
                        </div>
                        <% } %>
                </div>

                <div>
                    <label for="re-password">Contrase√±a</label>
                    <input class="control " type="password" name="password" id="password">
                    <% if (locals.errors && errors.password) { %>
                    <div class='text-danger'>
                        <%= errors.password.msg %>
                    </div>
                    <% } %>
                </div>

                <button class="boton" type="submit">Registrarse</button>

                <div class="errores">
                    <ul> </ul>
                </div>
                
            </form>
        </section>
    </main>

    <%- include('./partials/footer') %>
    <script src="/js/front-register.js"> </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
    </head>
<body>

  <%- include('./partials/header') %>
  <main>
    <article class="producto">
        <div class="contenedor-foto-producto">
          <img src="<%= producto.image %>" class="foto-producto">
      </div>
      <div class="descripcion">
          <i class="fas fa-truck"></i>
          <p class="precio">$<%= producto.price %></p>
          <p class="nombre"><%= producto.title %> </p>
          <div>
            <p class="parrafo" ><%= producto.description %> </p> 
        </div>
      </div>
      <a href="/products/detail/<%= producto.id %>/edit"> 
        <button type="submit">
          editar
        </button>
      </a>
      </article> 
    
  </main>

  <%- include('./partials/footer') %>
<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
    </head>
<body>

  <%- include('./partials/header') %>
  <main>
    <section class="form-register">
      <form action="/products/detail/<%= fruto.id %>/edit" method="POST">
          
          <h4>Nuevo Producto</h4>
          <div>
          <label for="producto">nombre de producto</label>
          <input class="control" type="text" name="nombre de producto" id="producto" value="<%= fruto.name %>">
          </div>


          <div>
          <label for="category">category</label>
          <input class="control" type="text" name="category" id="category" value="<%= fruto.category %>">
          </div>
          
          
          <div>
          <label for="price">precio</label>
          <input class="control" type="number" name="price" id="price" value="<%= fruto.price %>">
          </div>

          <div>
          <label for="description">Descripcion</label>
          <input class="control" type="text" name="description" id="description" value="<%= fruto.description %>">
          </div>
          <div>
            <button class="boton" type="submit">guardar</button>
            <button class="boton" type="delete">borrar</button>
          </div>
          
         
      </form>
  </section>
  </main>

  <%- include('./partials/footer') %>
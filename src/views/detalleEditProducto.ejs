<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
    </head>
<body>

  <%- include('./partials/header') %>
  <main>
    <section class="form-register">
      <form action="/products/detail/<%= producto.id %>/edit" method="POST">
          
          <h4>Edicion de producto</h4>
          <div>
          <label for="name">nombre de producto</label>
          <input class="control" type="text" name="name" id="name" value="<%= producto.title %>">
          </div>


          <div>
          <label for="category">category</label>
          <input class="control" type="text" name="category" id="category" value="<%= producto.category %>">
          </div>
          
          
          <div>
          <label for="price">precio</label>
          <input class="control" type="number" name="price" id="price" value="<%= producto.price %>">
          </div>

          <div>
          <label for="description">Descripcion</label>
          <input class="control" type="text" name="description" id="description" value="<%= producto.description %>">
          </div>
          <div>
            <button class="boton" type="submit">guardar</button>
          </div>
          </form>
          <a href="/products/detail//<%= fruto.id %>/edit"></a>
          <form action="/products/detail/<%= fruto.id %>/delete?_method=delete" method="POST">
            <button class="boton" type="submit" id="delete">borrar</button>
          </form>       
  </section>
  </main>

  <%- include('./partials/footer') %>
<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <link rel="stylesheet" href="/css/productCreate.css">
</head>

<body>

  <%- include('./partials/header') %>
  <main>
    <section class="form-register">
      <form action="/products/create" method="POST" enctype="multipart/form-data">

        <h4>Nuevo Producto</h4>
        <div>
          <label for="title">nombre de producto</label>
          <input class="control" type="text" name="title" id="title" placeholder="ej:barrita de semillas de girasol">
          <% if (locals.errors && errors.title) { %>
            <div class = 'text-danger'>
                <%= errors.title.msg %>
            </div>
        <% } %>
        </div>


        <div>
          <label>CATEGORIA</label> 
                <select name = "categoria"> 
                    <% categorias.forEach( categoria => { %>
                        <option value="<%= categoria.id %>">
                            <%= categoria.title %>
                        </option>
                    <% }) %>
                </select>
          <% if (locals.errors && errors.categoria) { %>
            <div class = 'text-danger'>
                <%= errors.categoria.msg %>
            </div>
        <% } %>
        </div>


        <div>
          <label for="price">precio</label>
          <input class="control" type="number" name="price" id="price">
          <% if (locals.errors && errors.price) { %>
            <div class = 'text-danger'>
                <%= errors.price.msg %>
            </div>
        <% } %>
        </div>

        <div>
          <label for="description">Descripcion</label>
          <input class="control" type="text" name="description" id="description">
          <% if (locals.errors && errors.description) { %>
            <div class = 'text-danger'>
                <%= errors.description.msg %>
            </div>
        <% } %>
        </div>

        <div>
          <label for="image">imagen</label>
          <input class="control" type="file" name="image" id="image">
          <% if (locals.errors && errors.image) { %>
            <div class = 'text-danger'>
                <%= errors.image.msg %>
            </div>
        <% } %>
        </div>

        <button class="boton" type="submit">Registrar producto</button>

      </form>
    </section>
  </main>

  <%- include('./partials/footer') %>
                    <tr class="trCart">
                    <td><p><%=producto.cantidad%></p></td>
                    <td class="tdfotoproducto"><img src="/img/<%=producto.image%>"></td>
                    <td class="nombreCart"><h3><%=producto.nombre%></h3><br><p>CÃ³d: <%=producto.id%></p></td>
                    <td><p><%producto.marca_id%></p></td>
                    <td><p>$<%=producto.precio%></p></td>
                    <td class="subtotalA"><p><b>$<%=producto.subtotal%></b></p></td>
                    </form>
                    <td> <form action="/productCart/delete/<%=producto.id %>/?_method=DELETE" method="POST" >
                        <button type="submit" class="botonBorrar"><i class="fas fa-trash-alt"></i></button>
                    </form>  
                    </td>
                    </tr> 
                 <% }) %>       
                     </tbody>
                </table>
            </div>
            
        </section>
    </main>

  
  <%- include('./partials/footer') %>

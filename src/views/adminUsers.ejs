<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
    </head>
<body>

  <%- include('./partials/header') %>
  <main>
    <section>
      <% users.forEach(function(user) { %>
        <article class="producto">
          <a href="/products/detail/<%= user.id %>"> <div class="contenedor-foto-producto">
            <img src="<%= user.image %>" class="foto-producto">
        </div>
        <div class="descripcion">
            <p class="nombre"> <%= user.firstName %></p>
            <p class="nombre"><%= user.lastName %></p>
            <p class="nombre"><%= user.email %> </p>
            <p class="nombre"><%= user.password %> </p>
        </div>
        </a>
        </article> 
        <% }) %>
    </section>
    
  </main>

  <%- include('./partials/footer') %>
<!DOCTYPE html>
<html lang="en">
  
    <head>
      <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/index.css">
    </head>
    
<body>

  <%- include('./partials/header') %>
  <main>
    <section>
      <% usuarios.forEach(function(usuario) { %>
        <article class="usuario">
          <a href="/users/list/<%= usuario.id %>"> <div class="contenedor-foto-usuario">
           <img src="../../public/img/<% usuario.image ? usuario.image: "userDefault.png" %>  class="foto-usuario"> 

        </div>
        <div class="descripcion">
            
            <p class="nombre" style="color: black;">$<%= usuario.firstName %></p>
            <p class="apellido"style="color: black;"><%= usuario.lastName %> </p>
        </div>
        </a>
        </article> 
        <% }) %>
    </section>
    
  </main>

  <%- include('./partials/footer') %>